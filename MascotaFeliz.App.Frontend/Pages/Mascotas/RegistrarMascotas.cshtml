@page
@model MascotaFeliz.App.Frontend.Pages.RegistrarMascotasModel
@{
      int mascotaId = Model.mascota.Id;
}
 <div>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Index">Inicio</a></li>
    <li class="breadcrumb-item" aria-current="page">Mascota</li>
    <li class="breadcrumb-item active" aria-current="page">Registrar Mascota</li>
  </ol>
</nav>
</div> 

<h2 style="text-align: center;">Registrar Mascota</h2>

<script type='text/javascript'>
  function validacion() {

    var valoresCorrectos = true;
    var mensaje = "";

  if (document.getElementById('veterinario').value == 0) {
      valoresCorrectos = false;
  mensjase = mensaje + " Veterinario";
    }

    if (document.getElementById('dueno').value==0) {
      valoresCorrectos = false;
      mensjase = mensaje + " Propietario";
    }

    
    if (document.getElementById('validationTooltip03').value.length < 1) {
      valoresCorrectos = false;
      mensjase = mensaje + " Raza";
    }

    if (document.getElementById('validationTooltip02').value.length < 1) {
      valoresCorrectos = false;
      mensjase = mensaje + " Color";
    }

    if (document.getElementById('validationTooltip01').value.length < 1) {
      valoresCorrectos = false;
      mensjase = mensaje + " Especie";
    }

    if (document.getElementById('validationTooltip06').value.length < 1) {
      valoresCorrectos = false;
      mensjase = mensaje + " Nombres";
    }


    if (valoresCorrectos == false) {
      alert('Algunos campos no estan correctos, vuelva a ingresarlos, algunos campos son: ' + mensjase);
    }
    return valoresCorrectos;
  }
</script>

<div id="forms">
    <form class="row g-3 needs-validation" method="post" onsubmit='return validacion()'>
          <div class="col-md-4 position-relative">
            <label for="validationTooltip06" class="form-label" asp-for="mascota.Nombre"></label>
            <input type="text" class="form-control" id="validationTooltip06" asp-for="mascota.Nombre">
        </div>
        <div class="col-md-4 position-relative">
            <label for="validationTooltip01" class="form-label" asp-for="mascota.Especie"></label>
            <input type="text" class="form-control" id="validationTooltip01" asp-for="mascota.Especie">
        </div>
        <div class="col-md-4 position-relative">
            <label for="validationTooltip02" class="form-label" asp-for="mascota.Color"></label>
            <input type="text" class="form-control" id="validationTooltip02" asp-for="mascota.Color">
        </div>
        <div class="col-md-4 position-relative">
            <label for="validationTooltip03" class="form-label" asp-for="mascota.Raza"></label>
            <input type="text" class="form-control" id="validationTooltip03" asp-for="mascota.Raza">
        </div>
        <div class="col-md-3 position-relative">
            <label for="dueno" class="form-label">Propietario</label>
          <select id="dueno" asp-for="mascota.dueno.Id" name="duenoId">
            <option value="0">Seleccione un Propietario</option>
             @foreach (var dueno in Model.listaDuenos)
             {
                <option value="@dueno.Id">@dueno.Nombres @dueno.Apellidos - Cedula: @dueno.Cedula</option>
             }
          </select>
        </div>

        <div class="col-md-4 position-relative">
          
           <label for="veterinario" class="form-label">Veterinario</label>
          <select id="veterinario" asp-for="mascota.veterinario.Id" name="veterinarioId">
            <option value="0">Seleccione un Propietario</option>
             @foreach (var veterinario in Model.listaVeterinarios)
             {
                <option value="@veterinario.Id">@veterinario.Nombres @veterinario.Apellidos -Tarjeta Profesional: @veterinario.TarjetaProfesional </option>
             }
          </select>
        </div>
        <div class="col-md-4 position-relative">
 <div><p>la <Strong>historia clínica</Strong> se agrega automaticamente</p></div>
</div>
        <div class="col-12">
            <button class="btn btn-primary" type="submit">Registrar Mascota</button>
        </div>
    </form>
</div>
